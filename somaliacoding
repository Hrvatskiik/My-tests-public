local wrong_password = false
local correct_password = false
local wrong_password_handle = ""


local function check()
	print("Checking Password...")
if password == "hello" then
correct_password =  true
wrong_password = false
else
wrong_password_handle = password
correct_password = false
wrong_password = true
end
end

local function action()
if correct_password == true and wrong_password == false then
print("Password entered and sulcessfully verified: " .. password)
elseif correct_password == false and wrong_password == true then
print("Incorrect password: " .. wrong_password_handle)
end
end

check()
wait(1)
action()
